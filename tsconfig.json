{
  "compilerOptions": {
    "target": "ES2020",                           // Modern JavaScript target
    "module": "CommonJS",                         // Suitable for Node.js
    "moduleResolution": "node",                   // Node-style module resolution
    "lib": ["ES2020"],                            // Use latest ECMAScript APIs
    "strict": true,                               // Enables all strict type-checking options
    "esModuleInterop": true,                      // Compatibility with CommonJS imports
    "forceConsistentCasingInFileNames": true,     // Enforces consistent import casing
    "skipLibCheck": true,                         // Speeds up builds by skipping type checking of .d.ts files

    // Decorators support for Sequelize
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Output configuration
    "outDir": "dist",                             // All compiled JS will go here
    "rootDir": "src",                             // Your TS source files root

    // Helpful dev options
    "resolveJsonModule": true,                    // Allows importing .json files
    "allowSyntheticDefaultImports": true,         // Needed for `import x from 'y'` style
    "useDefineForClassFields": false              // Compatible with Sequelize decorators
  },
  "include": ["src", "types"],                    // Include source and type definitions
  "exclude": ["node_modules", "dist"]             // Exclude compiled output and dependencies
}
